    width: 450px;
    background: white;
    border-radius: 15px;
    overflow: hidden;
    box-shadow: 0 15px 40px rgba(0,0,0,0.3);
}

.header {
    background: #667eea;
    color: white;
    padding: 15px;
    text-align: center;
    font-weight: bold;
}

.video-area {
    display: flex;
    justify-content: space-around;
    padding: 10px;
    background: #000;
}

video {
    width: 48%;
    background: black;
    border-radius: 10px;
}

.controls {
    display: flex;
    justify-content: space-around;
    padding: 10px;
}

button {
    padding: 8px 12px;
    border: none;
    background: #667eea;
    color: white;
    cursor: pointer;
    border-radius: 5px;
}

